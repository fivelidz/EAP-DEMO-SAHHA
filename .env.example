# Sahha EAP Dashboard Environment Configuration
# =====================================================

# Sahha API Configuration
# IMPORTANT: Set these in Vercel Environment Variables for security
# Go to: https://vercel.com/your-account/eap-demo-sahha/settings/environment-variables
SAHHA_APP_ID=your_app_id_here
SAHHA_APP_SECRET=your_app_secret_here
SAHHA_CLIENT_ID=your_client_id_here
SAHHA_CLIENT_SECRET=your_client_secret_here

# Sahha API Base URL (Corrected from earlier versions)
NEXT_PUBLIC_SAHHA_API_BASE_URL=https://sandbox-api.sahha.ai

# Demo Configuration (disabled - using real Sahha API)
DEMO_MODE=false
NEXT_PUBLIC_DEMO_MODE=false
DEMO_ORG_ID=demo_techcorp_industries
SAMPLE_DATA_SIZE=500

# Development Configuration
NODE_ENV=development
NEXT_PUBLIC_ENV=development

# Webhook Configuration (Optional)
ENABLE_WEBHOOKS=false
ENABLE_WEBSOCKETS=false

# Logging and Monitoring
DEBUG=false
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# Privacy and Security Settings
MIN_AGGREGATION_SIZE=5
ANONYMIZE_INDIVIDUAL_DATA=true
RETENTION_POLICY_DAYS=90